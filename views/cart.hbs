<h1>Корзина</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Название курса</th>
                <th>Цена (за шт)</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td class="price mini">{{price}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p><strong>Цена:</strong> <span class="price" id="cart-price">{{price}}</span></p>
    {{else}}

    {{/if}}
</div>